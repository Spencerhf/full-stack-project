<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum Project</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/CSS/forums.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    
    <!-- <script src="/Homepage/script.js"></script> -->
    <script src="https://kit.fontawesome.com/d00b451a0b.js" crossorigin="anonymous"></script>

</head>
<body class="bg-light">

  <!-- The navigation bar -->
  <div class="container-fluid vh-100">
    <div class='row'>
    <div id="nav-column" class="col-12 col-md-3 bg-dark" style="">
        <nav class="flex-md-column flex-row d-flex navbar navbar-dark navbar-expand-md">
          <a class="navbar-brand m-3" href="/forums"><img id="logo-img" src="/images/forum-logo.png" alt="Logo" style="max-width: 160px"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navbarNav" class="collapse navbar-collapse">
            <ul class="mt-4 text-center flex-column navbar-nav">
              <li class="mb-4 nav-item">
                <h5><a class="nav-link link-color" href="#">Home</a></h5>
              </li>
              <li class="mb-4 nav-item">
                <h5><a class="nav-link link-color" href="#">About Us</a></h5>
              </li>
              <li class="mb-4 nav-item">
                <h5><a class="nav-link link-color" href="#">Contact Us</a></h5>
              </li>
              <li class="mb-4 nav-item">
                <button role="button" href="/LoginPage/index.html" id="login-btn" class="btn btn-lg">Login/Sign Up</button>
              </li>
            </ul>
          </div>
        </nav>
    </div>

        <!-- Forums column -->
        <div class="vh-100 col-12 col-md-9 d-flex m-0 p-4 bg-light">
          <div>
            <!-- Middle search bar -->
            <form class="form-inline mt-4 my-2 w-100 justify-content-center">
              <input class="w-75 form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button id="search-submit-btn" class="btn my-2 my-sm-0" type="submit">Search</button>
            </form>

            <!-- Forum area -->
          <div id="forum-container" class="d-flex flex-row flex-wrap mx-auto" style="width: 90%;">
              <% for(var i=0; i<forums.length; i++){ %>
              <a href="/forums/<%= forums[i].forum_id %>/topics" id="<%= forums[i].forum_id %>" onclick="forumCardClicked(this.id)" class="card-link d-block m-3 mx-auto">
                  <div class="card-hover card">
                      <div class="card-body text-center">
                          <h1 class="icon"><%- forums[i].icons %></h1>
                          <h4><%= forums[i].name %></h4>
                      </div>
                  </div>
              </a>
              <% } %>
          </div>
        </div>      
      </div>
    </div>
  </div>
    

</body>
</html>